<?xml version="1.0" encoding="UTF-8"?>
    <widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "net.northmyrtle.cca"
        version   = "0.0.4">
    <name>FMS</name>
 
    <description>
        Conners Cool App
    </description>

    <author href="http://www.northmyrtle.net" email="support@northmyrtle.net">
        Northmyrtle Associates LLC
    </author>
    
    <plugin name="cordova-plugin-device"        spec="1.1.6" />
    <!--<plugin name="cordova-plugin-geolocation"   spec="2.4.3" />-->
    <plugin name="cordova-plugin-insomnia"      spec="4.3.0" />
    <plugin name="cordova-plugin-splashscreen"  spec="4.0.3" />
    <plugin name="cordova-plugin-whitelist"     spec="1.3.3" />

    <access origin="http://10.10.10.1:5002" /> <!-- Required for iOS9 -->
    <access origin="*" />
    
    <feature name="Geolocation">
        <param name="ios-package" value="CDVLocation" />
    </feature>
    
    <preference name="permissions"                  value="none"/>
    <preference name="SplashScreen"                 value="splash" />
    <preference name="SplashScreenDelay"            value="5000" />
    <preference name="show-splash-screen-spinner"   value="false" />
    <preference name="phonegap-version"             value="cli-6.5.0" />
    <preference name="orientation"                  value="default" />
    <preference name="target-device"                value="universal" />
    <preference name="fullscreen"                   value="false" />
    <preference name="webviewbounce"                value="false" />

    <icon src="icon.png" />
