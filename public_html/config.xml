    <icon src="res/icon/ios/icon-72-nmi.png"        platform="ios"  width="72" height="72" />
    <icon src="res/icon/ios/icon-114-nmi.png"       platform="ios"  width="114" height="114" />
    <icon src="res/icon/ios/icon-144-nmi.png"       platform="ios"  width="144" height="144" />
    
    <!-- iPhone 6 / 6+ -->
