    <!-- iPhone / iPod Touch  -->
    <icon src="res/icon/ios/icon-60-nmi.png"        platform="ios"  width="60" height="60" />
    <icon src="res/icon/ios/icon-120-nmi.png"       platform="ios"  width="120" height="120" />
    
    <!-- iPad -->
    <icon src="res/icon/ios/icon-76-nmi.png"        platform="ios"  width="76" height="76" />
    <icon src="res/icon/ios/icon-152-nmi.png"       platform="ios"  width="152" height="152" />
    
    <!-- Settings Icon -->
    <icon src="res/icon/ios/icon-29-nmi.png"        platform="ios"  width="29" height="29" />
    <icon src="res/icon/ios/icon-58-nmi.png"        platform="ios"  width="58" height="58" />
    
    <!-- Spotlight Icon -->
    <icon src="res/icon/ios/icon-40-nmi.png"        platform="ios"  width="40" height="40" />
    <icon src="res/icon/ios/icon-80-nmi.png"        platform="ios"  width="80" height="80" />
    
    <icon src="res/icon/ios/icon-1024-nmi.png"      platform="ios"  width="1024" height="1024" />
     
    
